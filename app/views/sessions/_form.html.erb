<%= form_with(model: user, url: '/sessions', method: :post) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :email, "Email Address (required)", style: "display: block" %>
    <%= form.text_field :email %>
  </div>
  <br/>
  <div>
    <%= form.label :zipcode, "Zipcode (optional)", style: "display: block" %>
    <%= form.text_field :zipcode, maxlength: 5 %>
  </div>
  <br/>

  <div>
    <%= form.submit 'Sign In' %>
  </div>
<% end %>
